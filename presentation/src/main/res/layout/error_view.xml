<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_open_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_margin_quadruple"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_open_box" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_five_fourth"
        android:layout_marginBottom="@dimen/default_margin_double"
        android:fontFamily="@font/iransans_medium"
        android:gravity="center"
        android:textColor="@color/thirdTextColor"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/image_open_box" />


</androidx.constraintlayout.widget.ConstraintLayout>